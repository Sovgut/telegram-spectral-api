{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        "target": "ES2021",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "rootDir": "./source",
        "baseUrl": "./source",
        "paths": {
            "~controller/*": ["./controller/*"],
            "~middleware/*": ["./middleware/*"],
            "~repository/*": ["./repository/*"],
            "~service/*": ["./service/*"],
            "~validator/*": ["./validator/*"],
            "~core/*": ["./core/*"],
            "~router": ["./router.js"],
            "~application": ["./main.js"]
        },
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
